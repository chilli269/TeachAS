<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="schedule_meeting" name="Schedule a meeting">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="container">
                    <div class="col-md-12">
                       <form action="/schedule-meeting/submit">
                            <div class="form-group" style="margin-top:20px;">
                                <label for="subject">Subject</label>
                                <select id="subject" name="subject" class="form-control" required="True">
                                    <t t-foreach="subjects" t-as="subject">
                                        <option t-att-value="subject.id">
                                            <t t-esc="subject.name"/>
                                        </option>
                                    </t>
                                </select>
                                <label for="subject">Time Length</label>
                                <select id="time_length" name="time_length" class="form-control" required="True">
                                    <option value="half">30 Minutes</option>
                                    <option value="hour">One Hour</option>
                                    <option value="hourhalf">One Hour and 30 Minutes</option>
                                    <option value="twohours">Two Hours</option>
                                </select>
                                <p>Please select your preferred session type:</p>
                                <div class="form-control">
                                    <input type="radio" id="online" name="session_type" value="online" required="True"/>
                                    <label for="online">Online</label>

                                    <input type="radio" id="fizic" name="session_type" value="fizic" required="True"/>
                                    <label for="fizic">Fizic</label>

                                    <input type="radio" id="other" name="session_type" value="other" required="True"/>
                                    <label for="other">I prefer not to say</label>
                                </div>
                                <label for="details">Meeting Details:</label>
                                <input type="text" id="details" name="details" minlength="5" maxlength="150" size="10" required="True" class="form-control"/>
                                <label for="preferred_day">Preferred Day</label>
                                <select id="preferred_day" name="preferred_day" class="form-control" required="True">
                                    <option value="ASAP">ASAP</option>
                                    <t t-foreach="days" t-as="day">
                                        <option t-att-value="day.id">
                                            <t t-esc="day.name"/>
                                        </option>
                                    </t>
                                </select>
                            </div>
                            <button type="submit" class="btn btn-primary">Create</button>
                        </form>
                    </div>
                </div>
              </div>
          </t>
    </template>


    <template id="schedule_meeting_success" name="Schedule a Meeting Successfully Submitted">
        <meta http-equiv="refresh" content="0; url = /dashboard"/>
        <t t-call="website.layout">
            <div id="wrap">
                <div class="container">
                    <div class="col-md-12">
                        <div class="alert alert-success" style="margin-top:20px;">
                            Scheduled the meeting successfully.
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="schedule_meeting_fail" name="Not enough available mentors">
        <t t-call="website.layout">
            <div id="wrap" >
                <div class="container">
                    <div class="col-md-12">
                        <div class="alert alert-danger" style="margin-top:20px;">
                            We are very sorry, but there are not enough mentors available at the moment.
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>


    <data>
        <record id="menu_schedule_meeting" model="website.menu">
            <field name="name">Schedule a meeting</field>
            <field name="url">/schedule-meeting</field>
            <field name="parent_id" ref="website.main_menu"/>
            <field name="sequence" type="int">22</field>
        </record>
    </data>
</odoo>