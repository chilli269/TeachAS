<?xml version="1.0" encoding="utf-8"?>
<odoo>
      <template id="dashboard" name="YourDashboard">
            <t t-call="website.layout">
                  <t t-if="sessions">
                      <h2 style="margin-top:20px; margin-left:15px;">Your sessions</h2>
                        <table id="session_table" class="meetings_table">
                              <tr>
                                    <th>Subject</th>
                                    <th>Mentor</th>
                                    <th>Student</th>
                                    <th>Meeting date</th>
                                    <th>Meeting duration</th>
                                    <th>Meeting details</th>
                                    <th>Meeting Link</th>
                                    <th>Mentor's Phone Number</th>
                                    <th>S-a desfasurat?</th>
                              </tr> 
                              <tr t-foreach="sessions" t-as="session" t-att-data-value="session.id">
                                    <td>
                                          <!-- <a t-att-href="session.meet_link(placeholder)"><t t-esc="session.materie"/></a> to try after automatic meet link -->
                                          <p t-field="session.materie.name"/>
                                    </td>
                                    <td>
                                          <p t-field="session.mentor.name"/>
                                    </td>
                                    <td>
                                          <p t-field="session.elev.name"/>
                                    </td>
                                    <td>
                                          <p t-field="session.data"/>
                                    </td>
                                    <td>
                                          <p t-field="session.time_length"/>
                                    </td>
                                    <td>
                                          <p t-field="session.details"/>
                                    </td>
                                    <td>
                                        <a t-if="session.meeting_link" t-att-href="session.meeting_link">BAM</a>
                                        <p t-else="">Contact Mentor/Student</p>
                                    </td>
                                    <td>
                                        <p t-field="session.mentor.phone_number"/>
                                    </td>
                                    <td>
                                          <input type="checkbox" value="session_done" class="session_done_input" t-att-id="session.id"/>
                                    </td>
                              </tr>
                        </table>
                        <t t-if="archived_sessions">
                              <h2>Your past sessions</h2>
                              <table id="session_table_archived" class="meetings_table">
                                    <tr>
                                          <th>Subject</th>
                                          <th>Mentor</th>
                                          <th>Student</th>
                                          <th>Meeting date</th>
                                          <th>Meeting duration</th>
                                          <th>Meeting details</th>
                                          <th>Meeting Link</th>
                                          <th>Mentor's Phone Number</th>
                                    </tr> 
                                    <tr t-foreach="archived_sessions" t-as="o">
                                          <td>
                                                <p t-field="o.materie.name"/>
                                          </td>
                                          <td>
                                                <p t-field="o.mentor.name"/>
                                          </td>
                                          <td>
                                                <p t-field="o.elev.name"/>
                                          </td>
                                          <td>
                                                <p t-field="o.data"/>
                                          </td>
                                          <td>
                                                <p t-field="o.time_length"/>
                                          </td>
                                          <td>
                                                <p t-field="o.details"/>
                                          </td>
                                          <td>
                                          <a t-att-href="o.meeting_link">BAM</a>
                                          </td>
                                          <td>
                                          <p t-field="o.mentor.phone_number"/>
                                          </td>
                                    </tr>
                              </table>
                        </t>
                        <t t-else="">
                              <span>You have no past sessions</span>
                        </t>
                        

                  </t>
                  <t t-else="">
                        <span>There are no upcoming sessions, please <a href="/schedule-meeting">BOOK ONE</a></span>
                  </t>
            </t>
      </template>


      <template id="finish_profile" name="Finish setting up your profile">
            <t t-call="website.layout">
            <div id="wrap">
                <div class="container">
                    <div class="col-md-12">
                       <form action="/finish_profile/submit">
                           <h2 style="margin-top:10px;">Finish setting up your profile!</h2>
                            <div class="form-group">
                                <div t-if="not user.phone_number">
                                    <label for="phone_number">Enter your phone number:</label>
                                    <input type="tel" id="phone_number" name="phone_number" pattern="[0-9]{10}" class="form-control" required="True"/>
                                </div>
                                <div t-if="not user.grade_id">
                                    <label for="phone_number">What's your grade?</label>
                                      <select id="grade_id" name="grade_id" class="form-control" required="True">
                                        <option value="8">5th-8th Grade</option>
                                        <option value="9">9th Grade</option>
                                        <option value="10">10th Grade</option>
                                        <option value="11">11th Grade</option>
                                        <option value="12">12th Grade</option>
                                    </select>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary">Finish setting up your profile!</button>
                        </form>
                    </div>
                </div>
              </div>
          </t>
      </template>

    <template id="profile_finished" name="Schedule a Meeting Successfully Submitted">
        <meta http-equiv="refresh" content="0; url = /dashboard" />
        <t t-call="website.layout">
            <div id="wrap">
                <div class="container">
                    <div class="col-md-12">
                        <div class="alert alert-success" style="margin-top:20px;">
                            Profile finished!
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>



      <data>
            <record id="menu_dashboard" model="website.menu">
                <field name="name">My Dashboard</field>
                <field name="url">/dashboard</field>
                <field name="parent_id" ref="website.main_menu"/>
                <field name="sequence" type="int">21</field>
            </record>
      </data> 
</odoo>