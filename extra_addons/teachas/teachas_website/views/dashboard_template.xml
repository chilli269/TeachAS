<?xml version="1.0" encoding="utf-8"?>
<odoo>
      <template id="dashboard" name="Your Dashboard">
            <t t-call="website.layout">
                  <t t-if="sessions">
                        <h2>Your sessions</h2>
                        <table id="session_table" class="meetings_table">
                              
                              <tr>
                                    <th>Class</th>
                                    <th>Mentor</th>
                                    <th>Student</th>
                                    <th>Meeting date</th>
                                    <th>Meeting duration</th>
                              </tr> 
                              <tr t-foreach="sessions" t-as="session">
                                    <td>
                                          <!-- <a t-att-href="session.meet_link(placeholder)"><t t-esc="session.materie"/></a> to try after automatic meet link -->
                                          <p><t t-esc="session.materie"/></p>
                                    </td>
                                    <td>
                                          <p><t t-esc="session.mentor.name"/></p>
                                    </td>
                                    <td>
                                          <p><t t-esc="session.elev.name"/></p>
                                    </td>
                                    <td>
                                          <p><t t-esc="session.data"/></p>
                                    </td>
                                    <td>
                                          <p><t t-esc="session.time_length"/> hours</p>
                                    </td>
                              </tr>
                        </table>
                  </t>
                  <!-- <t t-else="">
                        <span>There are no upcoming sessions, please<a href="/placeholder">book one</a></span>
                  </t>          -->
            </t>
      </template>
</odoo>